<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/image_list_item"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:background="@drawable/list_item_selector"
	android:orientation="horizontal" >

	<ImageView
		android:id="@+id/thumb_image_list_item"
		android:layout_width="60dip" 
		android:layout_height="60dip"
		android:layout_margin="0dip"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:cropToPadding="true"
		android:src="@drawable/default_thumb">
	</ImageView>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="fill_parent" 
		android:layout_weight="1"
		android:layout_marginLeft="5dip"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/title_image_list_item"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:gravity="bottom"
			android:layout_weight="1"
			android:textColor="@color/list_text_color_selector"
			android:textColorHint="@color/gray"
			android:singleLine="true"
			android:ellipsize="end"
			android:textSize="16dip">
		</TextView>

		<TextView
			android:id="@+id/info_image_list_item"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="top"
			android:layout_weight="1"
			android:paddingTop="2dip"
			android:textColor="@color/gray"
			android:textColorHint="@color/gray"
			android:singleLine="true"
			android:ellipsize="end"
			android:textSize="10dip">
		</TextView>
		
	</LinearLayout>
	
	<ImageView
		android:id="@+id/check_image_list_item"
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent"
		android:paddingRight="20dip"
		android:clickable="true"
		android:src="@drawable/list_check_button_selector">
	</ImageView>
	
</LinearLayout>
